# Uncomment the next line to define a global platform for your project
platform :ios, '11.0'

inhibit_all_warnings!
use_frameworks!

target 'Odeon' do

  # Stretchy Header for List View
  # https://github.com/gskbyte/GSKStretchyHeaderView
  pod "GSKStretchyHeaderView"

  # Image Caching and Loading
  # https://github.com/onevcat/Kingfisher
  pod "Kingfisher"

  # Networking (includes Alamofire)
  # https://github.com/Moya/Moya/
  pod "Moya"

  # Tabbed Page View Controller
  # https://github.com/xmartlabs/XLPagerTabStrip
  pod "XLPagerTabStrip"

  # Button Dropdown Menu
  # https://github.com/GitHawkApp/ContextMenu
  pod "ContextMenu"

  # Simple Alerts
  # https://github.com/GitHawkApp/Squawk
  pod "Squawk"

  # Networking Monitoring
  # https://github.com/ashleymills/Reachability.swift
  pod "ReachabilitySwift"

  # https://github.com/KrauseFx/WiFiAuth/blob/master/WifiAuth/Classes/WifiAuth.m#L81-L94
  # Potential for WiFi Auth UI?

  # Promises
  # https://github.com/mxcl/PromiseKit
  # https://medium.com/@victor.leong.17/moya-promisekit-with-a-taste-of-microservice-da0f2a6e1f14
  pod "PromiseKit"

  # Libraries I like the look of
  # https://github.com/blueapron/Mandoline - Action Sheet Picker
  # https://github.com/filipealva/PickerView - Full Page Picker
  # https://github.com/CRAnimation/CRRefresh - Pull-to-Refresh
  # https://github.com/wojteklu/Watchdog - Main-Thread Blocking Prevention
  # https://github.com/scottrhoyt/SwiftyTextTable - Handy Console Output Tool
  # https://github.com/saitjr/STLoadingGroup - Activity Indicator
  # https://github.com/ninjaprox/NVActivityIndicatorView - Activity Indicator

  # Reminders
  # Loading Indicator
  # Animations/Transitions
  # Haptic Feedback
  # Localization
  # Debugging Output
  # Maps with Clustering

  target 'OdeonTests' do
    inherit! :search_paths
    # Pods for testing
  end

end
